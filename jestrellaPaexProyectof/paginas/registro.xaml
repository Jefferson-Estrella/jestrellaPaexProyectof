<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="jestrellaPaexProyectof.paginas.registro"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#3498DB"
             Title="REGISTRO DE USUARIO">
    <ContentPage.Content>
        <StackLayout Margin="25">
            <!-- ==== Casilla de nombres ==== -->
            <Label Grid.Row="2" Text="Nombres" TextColor="White" FontSize="25" />
            <Frame x:Name="fraNombres" Grid.Row="3" CornerRadius="15"  Padding="0" HasShadow="False">
                <StackLayout>
                    <Entry x:Name="txtNombres" TextTransform="Lowercase"  TextColor="Black" Placeholder="Jefferson German"/>
                </StackLayout>
            </Frame>

            <!-- ==== Casilla de apellidos ==== -->
            <Label Grid.Row="2" Text="Apellidos" TextColor="White" FontSize="25" />
            <Frame x:Name="fraApellidos" Grid.Row="3" CornerRadius="15"  Padding="0" HasShadow="False">
                <StackLayout>
                    <Entry x:Name="txtApellidos" TextTransform="Lowercase"  TextColor="Black" Placeholder="Estrella Villa"/>
                </StackLayout>
            </Frame>

            <!-- ==== Casilla de edad ==== -->
            <Label Grid.Row="2" Text="Edad" TextColor="White" FontSize="25" />
            <Frame x:Name="fraEdad" Grid.Row="3" CornerRadius="15"  Padding="0" HasShadow="False">
                <StackLayout>
                    <Entry x:Name="txtEdad" TextTransform="Lowercase" Keyboard="Numeric" MaxLength="2" TextColor="Black" Placeholder="26"/>
                </StackLayout>
            </Frame>

            <!-- ==== Casilla de Correo ==== -->
            <Label Grid.Row="2" Text="Correo electronico" TextColor="White" FontSize="25" />
            <Frame x:Name="fraCorreo" Grid.Row="3" CornerRadius="15"  Padding="0" HasShadow="False">
                <StackLayout>
                    <Entry x:Name="txtCorreo" TextTransform="Lowercase" Keyboard="Email" TextColor="Black" Placeholder="jeffersongermanestrellavilla24@.com"/>
                </StackLayout>
            </Frame>

            <!-- ==== Casilla de Contrasena ==== -->
            <Label Grid.Row="2" Text="Contraseña" TextColor="White" FontSize="25" />
            <Frame x:Name="fraContrasena" Grid.Row="3" CornerRadius="15"  Padding="0" HasShadow="False">
                <StackLayout>
                    <Entry x:Name="txtContrasena" TextTransform="Lowercase" IsPassword="True" TextColor="Black" Placeholder="*****************"/>
                </StackLayout>
            </Frame>

            <!-- ==== Casilla de Boton de REGISTRAR ==== -->
            <Button x:Name="btnRegistrar" Clicked="btnRegistrar_Clicked" Grid.Row="9" BackgroundColor="#4CAF50" Text="Registrarse" TextColor="White" CornerRadius="20" FontSize="15" FontAttributes="Bold" HorizontalOptions="FillAndExpand"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>